<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this direct_report from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :github_id, "Github ID" %>
    <%= f.text_field :github_id, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :supervisor_id, "Supervisor" %>
    <%= collection_select :user, :supervisor_id, User.all, :id, :name, {:include_blank => "none"},{:class => "form-control"} %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
